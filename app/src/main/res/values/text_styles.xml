<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NormalTextBlack" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NormalTextBlack.Bold" parent="NormalTextBlack">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderTextBlack" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeaderTextBlack.Bold" parent="HeaderTextBlack">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallHeaderTextBlack" parent="HeaderTextBlack">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SmallHeaderTextGrey" parent="SmallHeaderTextBlack">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="SmallTextBlack" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SmallTextGray" parent="SmallTextBlack">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="SpinnerText" parent="NormalTextBlack.Bold">
        <item name="android:textSize">20sp</item>
    </style>
</resources>
