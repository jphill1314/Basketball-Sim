<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_scout"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/scout_player"
            app:layout_constraintEnd_toStartOf="@+id/guideline8"
            android:layout_marginEnd="8dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_contact"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/contact_player"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            android:layout_marginStart="8dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_scholarship"
            android:layout_marginTop="8dp"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@+id/button_scout"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/offer_scholarship"
            app:layout_constraintEnd_toStartOf="@+id/guideline8"
            android:layout_marginEnd="8dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_visit"
            android:layout_marginTop="8dp"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@+id/button_contact"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/official_visit"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/name"
            style="@style/NormalTextBlack"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="1.0"
            tools:text="Player Name - PG - 69"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline8"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_view"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"/>

</RelativeLayout>