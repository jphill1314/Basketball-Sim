<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/HeaderTextBlack"
            android:text="@string/returning_players_plus_commits"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pg"
            tools:text="2 (1)"
            android:textAppearance="@style/NormalTextBlack"
            app:layout_constraintEnd_toEndOf="@+id/pg_label"
            app:layout_constraintStart_toStartOf="@+id/pg_label"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sg"
            tools:text="3 (0)"
            android:textAppearance="@style/NormalTextBlack"
            app:layout_constraintEnd_toEndOf="@+id/sg_label"
            app:layout_constraintStart_toStartOf="@+id/sg_label"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sf"
            tools:text="3 (0)"
            android:textAppearance="@style/NormalTextBlack"
            app:layout_constraintEnd_toEndOf="@+id/sf_label"
            app:layout_constraintStart_toStartOf="@+id/sf_label"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pf"
            tools:text="2 (1)"
            android:textAppearance="@style/NormalTextBlack"
            app:layout_constraintEnd_toEndOf="@+id/pf_label"
            app:layout_constraintStart_toStartOf="@+id/pf_label"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/c"
            tools:text="1 (2)"
            android:textAppearance="@style/NormalTextBlack"
            app:layout_constraintEnd_toEndOf="@+id/c_label"
            app:layout_constraintStart_toStartOf="@+id/c_label"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pg_label"
            android:textAppearance="@style/NormalTextBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/sg_label"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pg"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/pg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sg_label"
            android:textAppearance="@style/NormalTextBlack"
            app:layout_constraintStart_toEndOf="@+id/pg_label"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/sf_label"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sg"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/sg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sf_label"
            android:textAppearance="@style/NormalTextBlack"
            app:layout_constraintStart_toEndOf="@+id/sg_label"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/pf_label"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sf"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/sf"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pf_label"
            android:textAppearance="@style/NormalTextBlack"
            app:layout_constraintStart_toEndOf="@+id/sf_label"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/c_label"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pf"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/pf"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/c_label"
            android:textAppearance="@style/NormalTextBlack"
            app:layout_constraintStart_toEndOf="@+id/pf_label"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/c"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:text="@string/c"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>